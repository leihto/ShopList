<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/state_icon" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:minHeight="55dp" android:minWidth="55dp"
            android:maxHeight="55dp" android:maxWidth="55dp" android:src="@drawable/tick_green"
            android:layout_margin="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/name" android:layout_alignTop="@+id/state_icon"
            android:gravity="center_vertical" android:layout_marginRight="40dp"
            android:layout_alignLeft="@+id/state_icon" android:layout_alignStart="@+id/state_icon"
            android:paddingLeft="65dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/menu_toggle"
            android:longClickable="false" android:src="@drawable/menu_expand"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>